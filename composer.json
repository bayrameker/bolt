{
    "name": "bayrameker/my-bolt-framework",
    "description": "A modern PHP framework with Bolt CLI",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "core/"
        }
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "vlucas/phpdotenv": "^5.6",
        "illuminate/database": "^8.0",
        "guzzlehttp/guzzle": "^7.0",
        "doctrine/annotations": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    }
}
